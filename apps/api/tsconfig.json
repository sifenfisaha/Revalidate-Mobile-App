{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@revalidation-tracker/shared-types": ["../../packages/shared-types/src"],
      "@revalidation-tracker/utils": ["../../packages/utils/src"],
      "@revalidation-tracker/constants": ["../../packages/constants/src"],
      "@revalidation-tracker/validators": ["../../packages/validators/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
